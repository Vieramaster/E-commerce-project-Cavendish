{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "strict": true,
    "jsx": "react-jsx",
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "esnext",  
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "src/components/hooks"]
}
