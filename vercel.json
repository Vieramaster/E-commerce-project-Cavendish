{

  "version": 2,
  "builds": [
    {
      "src": "api/NewsApi.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist" 
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/NewsApi.js"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1" 
    }
  ]
}
